{
  "name": "blckops-fullstack-no-html",
  "version": "1.0.2",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:client": "node build/build-client.mjs --watch",
    "dev:server": "node --watch server/server.js",
    "build": "npm-run-all build:*",
    "build:client": "node build/build-client.mjs --prod",
    "build:server": "node -e \"import('node:fs/promises').then(fs=>fs.mkdir('dist',{recursive:true}).then(()=>fs.copyFile('server/server.js','dist/server.js')))\"",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.0",
    "googleapis": "^164.1.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.11",
    "npm-run-all": "^4.1.5"
  }
}
